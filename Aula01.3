import java.util.Scanner;

public class exercicio03 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("Insira a primeira nota: ");
        double nota01 = scanner.nextDouble();

        System.out.println("Insira a segunda nota: ");
        double nota02 = scanner.nextDouble();

        System.out.println("Insira a terceira nota: ");
        double nota03 = scanner.nextDouble();

        double media = (nota01 + nota02 + nota03) / 3;

        if (media >= 7.0) {
            System.out.println("Aprovado por média! Sua média final é: " + media);
        } else if (media < 4.0) {
            System.out.println("Reprovado por nota! Sua média é: " + media);
        } else {
            System.out.println("Final! Sua média é: " + media);



        }
    }
}
